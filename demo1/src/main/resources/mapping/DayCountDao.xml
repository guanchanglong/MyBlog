<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gcl.demo1.dao.DayCountDao">

    <resultMap id="dayCountMap" type="com.gcl.demo1.entity.DayCount">
        <id property="id" column="id"/>
        <result property="day" column="day"/>
        <result property="count" column="count"/>
    </resultMap>

    <update id="updateNewestDay">
        update b_day_count
          set count = count+1
            where id = #{dayId}
    </update>

    <update id="updateCountById" parameterType="com.gcl.demo1.entity.DayCount">
        update b_day_count
          set day = #{dayCount.day},
              count = #{dayCount.count}
            where id = #{dayCount.id}
    </update>

    <select id="findAll" resultMap="dayCountMap">
        select *
          from b_day_count
    </select>

</mapper>