<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gcl.demo1.dao.mybatis.MTagDao">

    <resultMap id="tagMap" type="com.gcl.demo1.entity.mybatis.Tag">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>

    <select id="findTagByBlogId" resultMap="tagMap">
        select * from b_tag where id in (select tag_id from b_blog_tag where blog_id = #{blogId})
    </select>

    <select id="findAllTag" resultMap="tagMap">
        select * from b_tag
    </select>

</mapper>