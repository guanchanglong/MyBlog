<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gcl.demo1.dao.mybatis.MHobbyDao">

    <resultMap id="hobbyMap" type="com.gcl.demo1.entity.mybatis.Hobby">
        <id property="id" column="id"/>
        <result property="hobbyName" column="hobby_name"/>
        <result property="userId" column="user_id"/>
    </resultMap>

    <select id="findHobbyByUserId" resultMap="hobbyMap">
        select * from b_hobby where user_id = #{userId}
    </select>

</mapper>